@page
@model Adv_Net_Assign2.Pages.GroceryList.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>GroceryListModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="GroceryListModel.ItemId" />
            <div class="form-group">
                <label asp-for="GroceryListModel.ItemName" class="control-label"></label>
                <input asp-for="GroceryListModel.ItemName" class="form-control" />
                <span asp-validation-for="GroceryListModel.ItemName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GroceryListModel.Description" class="control-label"></label>
                <input asp-for="GroceryListModel.Description" class="form-control" />
                <span asp-validation-for="GroceryListModel.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GroceryListModel.DateCreated" class="control-label"></label>
                <input asp-for="GroceryListModel.DateCreated" class="form-control" />
                <span asp-validation-for="GroceryListModel.DateCreated" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GroceryListModel.Quantity" class="control-label"></label>
                <input asp-for="GroceryListModel.Quantity" class="form-control" />
                <span asp-validation-for="GroceryListModel.Quantity" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="GroceryListModel.Completed" /> @Html.DisplayNameFor(model => model.GroceryListModel.Completed)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
